<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <include
        layout="@layout/main_toolbar_layout">
    </include>
    <TextView
        android:id="@+id/info_failure_hintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/failure_hints"
        android:textSize="@dimen/TextSize14"
        android:textColor="@color/red_FF1200"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/yellow_E4C9AF"
        android:visibility="gone"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_f2f2f2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="结算入网类型："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/account_info_tvNetType"
                    style="@style/info_text_etText"
                    app:arrowTint="@color/grey_666666"
                    app:textTint="@color/grey_666666"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/account_info_licenseNum"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="执照证件号码："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/account_info_tvLicenseNum"
                    style="@style/info_text_etText"
                    android:hint="执照证件号码"
                    android:inputType="number"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/account_info_licenseValidity"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="证件到期日期："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/account_info_tvLicenseValidity"
                    style="@style/info_text_etText"
                    android:drawableRight="@drawable/spinner_icon_xiao"
                    android:gravity="center_vertical"
                    />
                <CheckBox
                    android:id="@+id/account_info_cbLicenseValidity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="长期有效"
                    android:paddingRight="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="结算账户类型："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <RadioGroup
                    android:id="@+id/account_info_rgPublicAndPrivate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white_ffffff"
                    android:layout_marginLeft="10dp"
                    >
                    <RadioButton
                        android:id="@+id/account_info_rbPublic"
                        style="@style/info_text_etText"
                        android:text="对公"
                        />
                    <RadioButton
                        android:id="@+id/account_info_rbPrivate"
                        style="@style/info_text_etText"
                        android:text="对私"
                        />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/account_info_licenseType"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="入网证件类型："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/account_info_tvLicenseType"
                    style="@style/info_text_etText"
                    app:arrowTint="@color/grey_666666"
                    app:textTint="@color/grey_666666"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/account_info_legalPersonAccount"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="是否法人入账："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <RadioGroup
                    android:id="@+id/account_info_rgLegalPersonAccount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white_ffffff"
                    android:layout_marginLeft="10dp"
                    >
                    <RadioButton
                        android:id="@+id/account_info_rbIsLegalPersonAccount"
                        style="@style/info_text_etText"
                        android:text="法人入账"
                        />
                    <RadioButton
                        android:id="@+id/account_info_rbNoLegalPersonAccount"
                        style="@style/info_text_etText"
                        android:text="非法人入账"
                        />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/account_info_legalPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    >
                    <TextView
                        style="@style/info_text_xinghao"
                        android:text="*"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        style="@style/info_text_title"
                        android:text="法人姓名："
                        android:ems="5"
                        />
                    <com.wdkj.dkhdl.view.LimitEditText
                        android:id="@+id/account_info_etLegalPersonName"
                        style="@style/info_text_etText"
                        android:hint="法人姓名"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    >
                    <TextView
                        style="@style/info_text_xinghao"
                        android:text="*"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        style="@style/info_text_title"
                        android:text="法人身份证号："
                        android:ems="5"
                        android:layout_gravity="center_vertical"
                        />
                    <EditText
                        android:id="@+id/account_info_etLegalPersonIdNum"
                        style="@style/info_text_etText"
                        android:hint="法人身份证号"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    >
                    <TextView
                        style="@style/info_text_xinghao"
                        android:text="*"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        style="@style/info_text_title"
                        android:text="法人身份证有效期："
                        android:ems="5"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/account_info_tvLegalPersonIdNumValidity"
                        style="@style/info_text_etText"
                        android:drawableRight="@drawable/spinner_icon_xiao"
                        android:gravity="center_vertical"
                        />
                    <CheckBox
                        android:id="@+id/account_info_cbLegalPersonIdNumValidity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="长期有效"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/account_info_settPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    >
                    <TextView
                        style="@style/info_text_xinghao"
                        android:text="*"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        style="@style/info_text_title"
                        android:text="结算人身份证号："
                        android:ems="5"
                        android:layout_gravity="center_vertical"
                        />
                    <EditText
                        android:id="@+id/account_info_tvSettPersonIdNum"
                        style="@style/info_text_etText"
                        android:hint="结算人身份证号"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    >
                    <TextView
                        style="@style/info_text_xinghao"
                        android:text="*"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        style="@style/info_text_title"
                        android:text="结算人身份证有效期："
                        android:ems="5"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/account_info_tvSettPersonIdNumValidity"
                        style="@style/info_text_etText"
                        android:drawableRight="@drawable/spinner_icon_xiao"
                        android:gravity="center_vertical"
                        />
                    <CheckBox
                        android:id="@+id/account_info_cbSettPersonIdNumValidity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="长期有效"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="结算人账户开户名："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/account_info_etSettPersonAccountName"
                    style="@style/info_text_etText"
                    android:hint="结算人账户开户名"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="结算人账户开户号："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/account_info_etSettPersonAccountNum"
                    style="@style/info_text_etText"
                    android:hint="结算人账户开户号"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text=" "
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="银行卡预留手机号："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/account_info_etBankCardCell"
                    style="@style/info_text_etText"
                    android:hint="银行卡预留手机号"
                    android:inputType="phone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="结算账户开户总行："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/account_info_tvOpeningBank"
                    style="@style/info_text_etText"
                    android:drawableRight="@drawable/spinner_icon_xiao"
                    android:gravity="center_vertical"
                    android:hint="请选择银行"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="结算账户开户行省："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/account_info_tvOpeningProvince"
                    style="@style/info_text_etText"
                    android:drawableRight="@drawable/spinner_icon_xiao"
                    android:gravity="center_vertical"
                    android:hint="请选择省份"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="结算账户开户行城市："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/account_info_tvOpeningCity"
                    style="@style/info_text_etText"
                    android:drawableRight="@drawable/spinner_icon_xiao"
                    android:gravity="center_vertical"
                    android:hint="请选择城市"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text=" "
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="结算账户开户支行："
                    android:ems="5"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/account_info_tvOpeningArea"
                    style="@style/info_text_etText"
                    android:drawableRight="@drawable/spinner_icon_xiao"
                    android:gravity="center_vertical"
                    android:hint="请选择支行"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/account_info_btNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="下一步"
        android:textSize="@dimen/TextSize18"
        android:textColor="@color/white_ffffff"
        android:background="@color/blue_409EFF"
        />
</LinearLayout>
