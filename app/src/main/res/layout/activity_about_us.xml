<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_f8f8f8"
     >
    
     <include layout="@layout/main_toolbar_layout"/>
	
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@color/white_f3f7fd"
         android:paddingTop="50dp"
         android:paddingBottom="50dp"
         android:gravity="center"
         >
         <ImageView 
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:src="@drawable/logo_icon"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/app_name"
             android:textSize="@dimen/TextSize16"
             android:textColor="@color/gray_999"
             android:layout_marginTop="7dp"
             />
     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_f2f2f2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_fragment_my_signOutLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white_ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本号"
                android:textSize="@dimen/TextSize14"
                android:textColor="@color/grey_666666"
                android:layout_toRightOf="@id/main_fragment_my_signOutImgIcon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/about_us_tvVersionCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.01"
                android:textSize="@dimen/TextSize15"
                android:textColor="@color/grey_666666"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
