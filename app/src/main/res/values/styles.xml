<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white_ffffff</item>
        <item name="actionMenuTextColor">@color/white_ffffff</item>
        <item name="android:textSize">@dimen/TextSize16</item>
    </style>
    <!-- 登录，提交Button 统一样式theme -->
    <style name="submit_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bt_blue_radius10</item>
        <item name="android:textSize">@dimen/TextSize22</item>
        <item name="android:textColor">@color/white_ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="info_text_xinghao">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TextSize22</item>
        <item name="android:textColor">@color/red_FF1200</item>
    </style>
    <style name="info_text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TextSize16</item>
        <item name="android:textColor">@color/grey_666666</item>
    </style>
    <style name="info_rate_imgView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/text_angle_gray</item>
    </style>
    <style name="info_text_etText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white_ffffff</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">@dimen/TextSize16</item>
        <item name="android:textColor">@color/grey_666666</item>
    </style>
    <style name="info_rate_etText">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text"></item>
        <item name="android:textSize">@dimen/TextSize22</item>
        <item name="android:textColor">@color/black_333</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">4</item>
        <item name="android:background">@drawable/text_angle</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- 统一分割线 -->
    <style name="divider_line1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_e5e5e5</item>
    </style>
    <style name="divider_line1dp_h">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_e5e5e5</item>
    </style>
    <style name="divider_line10dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/gray_e5e5e5</item>
    </style>
    <!-- 自定义登录圆形Dialog样式 -->
    <style name="pro_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 自定义Dialog样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- 三级菜单Dialog样式定义 -->
    <style name="PickerDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white_ffffff</item>
    </style>

    <!-- PopupWindow屏幕底部弹出动画样式 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="Translucent_Theme" parent="android:style/Theme.Holo.Light.Dialog.MinWidth">
        <!-- 显示时屏幕不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- 自定义换行LinearLayout 默认样式 -->
    <style name="WarpLinearLayoutDefault" >
        <item name="grivate">left</item>
        <item name="horizontal_Space">20dp</item>
        <item name="vertical_Space">20dp</item>
        <item name="isFull">false</item>
    </style>
</resources>
