<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include
        layout="@layout/main_toolbar_layout">
    </include>
    <TextView
        android:id="@+id/info_failure_hintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/failure_hints"
        android:textSize="@dimen/TextSize14"
        android:textColor="@color/red_FF1200"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/yellow_E4C9AF"
        android:visibility="gone"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_f2f2f2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="商户名称："
                    />
                <EditText
                    android:id="@+id/basic_info_busName"
                    style="@style/info_text_etText"
                    android:hint="商户名称"
                    android:maxLength="30"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="商户类型："
                    android:layout_gravity="center_vertical"
                    />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/basic_info_merchant_type"
                    style="@style/info_text_etText"
                    app:arrowTint="@color/grey_666666"
                    app:textTint="@color/grey_666666"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="商户简称："
                    />
                <EditText
                    android:id="@+id/basic_info_busAbbreviation"
                    style="@style/info_text_etText"
                    android:maxLength="20"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="注册名称："
                    />
                <EditText
                    android:id="@+id/basic_info_registName"
                    style="@style/info_text_etText"
                    android:hint="营业执照名称"
                    android:maxLength="60"
                    android:gravity="top"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="商户所在省/市/县："
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/basic_info_region"
                    style="@style/info_text_etText"
                    android:hint="请选择"
                    android:drawableRight="@drawable/spinner_icon_xiao"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="商户详细地址："
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/basic_info_address"
                    style="@style/info_text_etText"
                    android:hint="详细地址"
                    android:maxLength="60"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="商户联系人："
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    />
                <com.wdkj.dkhdl.view.LimitEditText
                    android:id="@+id/basic_info_contacts"
                    style="@style/info_text_etText"
                    android:hint="商户联系人姓名"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="联系人身份证号："
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/basic_info_contactsIdCard"
                    style="@style/info_text_etText"
                    android:hint="联系人身份证号"
                    android:inputType="numberDecimal"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="身份证有效期："
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    />
                <Button
                    android:id="@+id/basic_info_contacts_tvIdCardValidity"
                    style="@style/info_text_etText"
                    android:drawableRight="@drawable/spinner_icon_xiao"
                    android:gravity="center_vertical"
                    />
                <CheckBox
                    android:id="@+id/basic_info_contacts_cbIdCardValidity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="长期有效"
                    android:paddingRight="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="联系人电话："
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/basic_info_contactsTel"
                    style="@style/info_text_etText"
                    android:hint="联系人电话"
                    android:inputType="phone"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="联系人邮箱："
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/basic_info_contactsEmil"
                    style="@style/info_text_etText"
                    android:hint="联系人邮箱"
                    android:inputType="textEmailAddress"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="行业类目："
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/basic_info_industryType"
                    style="@style/info_text_etText"
                    android:hint="请选择"
                    android:drawableRight="@drawable/spinner_icon_xiao"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                >
                <TextView
                    style="@style/info_text_xinghao"
                    android:text=" "
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    style="@style/info_text_title"
                    android:text="客服电话："
                    />
                <EditText
                    android:id="@+id/basic_info_service_phone"
                    style="@style/info_text_etText"
                    android:hint="客服电话"
                    android:inputType="phone"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/basic_info_btNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="下一步"
        android:textSize="@dimen/TextSize18"
        android:textColor="@color/white_ffffff"
        android:background="@color/blue_409EFF"
        />
</LinearLayout>
